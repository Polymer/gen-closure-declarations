{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2017"
        ],
        "outDir": "./lib",
        "declaration": true,
        "sourceMap": true,
        "pretty": true,
        "baseUrl": "./",
        "paths": {
            "parse5": [
              "node_modules/@types/parse5",
              "*"
            ]
          }
    },
    "include": [
        "src/**/*.ts"
    ]
}
